        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/cardbgval"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:id="@+id/rel1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/devimg1"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@drawable/bhaskar" />

                    <TextView
                        android:id="@+id/nameDev1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/devimg1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/devimg1"
                        android:layout_toRightOf="@+id/devimg1"
                        android:text="Bhaskar Kumar"
                        android:textColor="@android:color/black"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/DeptDev1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/college1"
                        android:layout_alignStart="@+id/nameDev1"
                        android:layout_centerHorizontal="false"
                        android:text="Dept. of Information Science"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/college1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/devimg1"
                        android:layout_alignLeft="@+id/nameDev1"
                        android:layout_alignStart="@+id/nameDev1"
                        android:text="Bangalore Institute of Technology"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/phdev1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/devimg1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:autoLink="phone"
                        android:text="Phone: +91 9739743004"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/mailid1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="false"
                        android:layout_alignParentRight="false"
                        android:layout_below="@+id/phdev1"
                        android:layout_marginLeft="10dp"
                        android:autoLink="email"
                        android:text="E-Mail: bhaskar.kumar6116@gmail.com"
                        android:textColor="@android:color/black" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>
